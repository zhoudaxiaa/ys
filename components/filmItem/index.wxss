/* components/filmItem/index.wxss */

.film-item {
  width: 350rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.film-cover, .film-cover-img {
  width: 350rpx;
  height: 508rpx
}

.film-cover {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-end;
}

.film-grade-wrap {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 50rpx;
  margin-top: -50rpx;
  background-color: rgba(0,0,0,.3);
}

.film-grade {
  color: #fff;
  padding-right: 30rpx;
}