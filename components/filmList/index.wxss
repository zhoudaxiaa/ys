/* components/filmItem/index.wxss */

.film-list-wrap {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 17rpx;
}

.film-item {
  width: 350rpx;
  margin-top: 10rpx;
  padding-bottom: 20rpx;
  border: 1rpx solid #efefef;
  border-radius: 10rpx;
  box-shadow: 5rpx 0rpx 80rpx 5rpx #efefef;
  overflow: hidden;
}

.film-cover, .film-cover-img {
  width: 350rpx;
  height: 508rpx
}

.film-cover {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-end;
}

.film-grade-wrap {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 50rpx;
  margin-top: -50rpx;
  background-color: rgba(0,0,0,.3);
}

.film-grade {
  font-size: 24rpx;
  color: #fff;
  padding-right: 20rpx;
}

.film-title {
  padding-left: 20rpx;
  line-height: 60rpx;
}

.film-tag-wrap {
  padding: 0 20rpx;
}

.film-more {
  display: flex;
  height: 100rpx;
  width: 100%;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #ccc;
}