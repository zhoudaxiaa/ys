/* pages/history/index.wxss */

.his-tab-wrap {
  display: flex;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #ccc;
}

.his-tab-item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
}

.his-tab-active {
  border-bottom: 4rpx solid #48a76d;
}

.his-film-cont {
  padding: 0 30rpx 30rpx;
}

.his-film-item {
  margin-top: 20rpx;
}

.his-film-time {
  display: block;
  margin-bottom: 10rpx;
  font-size: 60rpx;
  color: #e5e5e5;
}

.film-more {
  display: flex;
  height: 100rpx;
  width: 100%;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #ccc;
}