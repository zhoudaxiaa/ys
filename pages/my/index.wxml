  <block wx:if="{{isLogin}}">
    <image class="avatar" src="{{avatar}}"></image>
    <text class="name">{{name}}</text>
  </block>

  <button
    wx:else
    class="login-btn"
    open-type="getUserInfo"
    bindgetuserinfo="getUserInfo">登录
