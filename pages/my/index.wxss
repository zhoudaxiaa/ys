/* pages/my/index.wxss */

.my-hd {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  height: 420rpx;
  overflow: hidden;
}

.my-hd-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background-size: cover;
  z-index: -2;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  box-shadow: 0, 0, 150rpx rgba(255,255,255,.3)
}

.name {
  color: #fff;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.login-btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  background-color: rgba(0,0,0,.2);
  border: 1rpx solid #fff;
  border-radius: 50rpx;
}

.my-op-wrap {
  display: flex;
  flex-wrap: wrap;
}

.my-op-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 248rpx;
  height: 250rpx;
  border: 1rpx solid #ccc;
  border-left-width: 0;
}

.my-op-icon {
  width: 100rpx;
  height: 100rpx;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: contain;
  margin-bottom: 20rpx;
}

.icon-favorite {
  background-image: url(data:image/png;base64,);
}