/* pages/filmDetail/index.wxss */

.fd-hd {
  display: flex;
  position: relative;
  height: 560rpx;
  overflow: hidden;
  padding: 80rpx 35rpx 0;
  background-clip: padding-box;
  justify-content: space-between;
}

.fd-hd-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(30rpx);
  z-index: -2;
}

.fd-cover {
  display: flex;
  width: 300rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.fd-cover-img {
  width: 300rpx;
  height: 420rpx;
  border-radius: 10rpx;
  box-shadow: 0 30rpx 150rpx rgba(255, 255, 255, .3)
}

.favorite-btn-wrap {
  margin-top: -15rpx;
}

.fd {
  padding-left: 35rpx;
  color: #fff;
}

.fd-title {
  font-size: 42rpx;
  margin-bottom: 10rpx;
}

.fd-attr-item {
  color: #eee;
  margin-top: 20rpx;
}

.fd-data {
  display: flex;
  width: 100%;
  height: 150rpx;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #f4f4f4;
}

.fd-data-item {
  display: flex;
  flex-wrap: wrap;
  width: 33.33%;
  text-align: center;
  justify-content: center;
  border-left: 1px solid #eee;
}

.fd-data-item:first-child {
  border: none;
}

.fd-data-num {
  width: 100%;
  font-size: 40rpx;
  color: #444;
}

.fd-data-title {
  width: 100%;
  color: #999;
}

.fd-ct {
  padding: 40rpx;
}

.fd-ct-title {
  margin: 20rpx 0;
  padding-left: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #444;
  border-left: 10rpx solid #47a86c;
}

.fd-ct-intro {
  line-height: 1.5;
  color: #666;
}

.fd-ct-person {
  display: flex;
  width: 100%;
  height: 480rpx;
  overflow-x: scroll;
  overflow-y: hidden;
}

.fd-ct-person-item {
  margin-left: 20rpx;
  text-align: center;
}

.fd-ct-person-item:first-child {
  margin-left: 0;
}

.fd-ct-person-img {
  width: 280rpx;
  height: 400rpx;
}

.fd-ct-person-name {
  display: block;
  color: #666;

}

.fd-ct-person-role {
  display: block;
  color: #999
}

.fd-ct-tag {
  display: flex;
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}